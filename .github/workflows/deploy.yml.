name: Deploy to Hosting

on:
  push:
    branches:
      - main

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Deploy to server
        uses: appleboy/ssh-action@master
        with:
          host: ${{ secrets.SSH_HOST }}
          username: ${{ secrets.SSH_USERNAME }}
          key: ${{ secrets.SSH_KEY }}
          script: |
            cd /https://server257.hosting.reg.ru:1500/ispmgr#/list?name=biocode9.ru%2F&plid=%2Fwww%2Fbiocode9.ru&p_num=1&func=file&tab_id=3
            git pull origin main
